  <section id="work">
    <div class="contact-title-div">
      <text class="contact-title">WORK</text>
      <p>Click each project to see more information.</p>
    </div>

    <div class="work-images-div">
      <div class="w3-third">
        <img id="t-rex" class="work-image" src="https://i.imgur.com/QkpogKu.jpg" style="width:100%" onclick="onClickTrex(this)" alt="Thesaurus-REX is an interactive React App">
