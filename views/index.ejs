      <div class="w3-third">
        <img class="work-image" src="https://i.imgur.com/QkpogKu.jpg" style="width:100%" onclick="onClickTrex(this)" alt="">
      </div>
    </div>
  </section>

  <!-- Modal for full size images on click-->


    <div id="modal01" class="w3-modal" style="padding-top:0" onclick="this.style.display='none'">
        <span class="w3-button w3-black w3-xlarge w3-display-topright">Ã—</span>
        <div class="w3-modal-content w3-animate-zoom w3-center w3-transparent w3-padding-64">
          <img id="img01" class="w3-image">
